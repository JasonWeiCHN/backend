.container {
    padding: 20rpx;
}
.section {
    margin-bottom: 30rpx;
}
.header {
    font-size: 32rpx;
    font-weight: bold;
    margin: 20rpx 0;
    text-align: center;
}

.time-slot {
    background: #f0f0f0;
    padding: 20rpx;
    margin: 10rpx 0;
    border-radius: 12rpx;
    text-align: center;
}

.time-slot.selected {
    background: orange;
    color: white;
    font-weight: bold;
}
.picker {
    background: #ffffff;
    padding: 10rpx;
    border: 1px solid #ccc;
    margin: 10rpx 0;
}

/* 按钮区域 */
.button-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 40rpx;
}

.custom-button {
    width: 80%;
    padding: 20rpx 0;
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    color: white;
    background-color: #333333;
    border-radius: 10rpx;
    margin: 10rpx 0;
}

.primary {
    background-color: orange;
}
