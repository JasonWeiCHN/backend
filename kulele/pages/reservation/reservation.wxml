<view class="container">
    <view class="header">
        当前游戏：{{ gameName }}
    </view>

    <view class="section">
        <text>请选择预约日期：</text>
        <radio-group bindchange="onDateOptionChange">
            <label><radio value="today" checked /> 今天</label>
            <label><radio value="tomorrow" /> 明天</label>
            <label><radio value="other" /> 其他日期</label>
        </radio-group>

        <view wx:if="{{dateOption === 'other'}}">
            <picker mode="date" value="{{selectedDate}}" bindchange="onDatePickerChange" start="{{minDate}}">
                <view class="picker">选择日期：{{selectedDate}}</view>
            </picker>
        </view>

        <view class="summary">
            已选日期：{{displayDate}}
        </view>
    </view>

    <view class="section">
        <text>请选择时间段：</text>
        <block wx:for="{{timeSlots}}" wx:key="index">
            <view class="time-slot {{selectedSlotIndex === index ? 'selected' : ''}}"
                  bindtap="selectTimeSlot"
                  data-slot="{{item}}"
                  data-index="{{index}}">
                {{item.start}} - {{item.end}}
            </view>
        </block>
    </view>

    <view class="section">
        <text>自定义时间段：</text>
        <picker mode="selector" range="{{hourOptions}}" bindchange="onStartHourChange">
            <view class="picker">开始时间：{{customStart}}</view>
        </picker>
        <picker mode="selector" range="{{endHourOptions}}" bindchange="onEndHourChange">
            <view class="picker">结束时间：{{customEnd}}</view>
        </picker>
    </view>

    <view class="section">
        <text>请选择区域：</text>
        <radio-group bindchange="onAreaChange">
            <label><radio value="hall" checked /> 大厅</label>
            <label><radio value="room" /> 包房</label>
        </radio-group>
    </view>

    <view class="section">
        <text>预计价格：￥{{price}}</text>
    </view>

    <!-- 按钮区域 -->
    <view class="button-group">
        <button class="custom-button primary" bindtap="submitAppointment">确认预约</button>
    </view>
</view>
