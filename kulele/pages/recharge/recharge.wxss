.recharge-container {
    padding: 32rpx;
}

.title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 24rpx;
}

.amount-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    margin-bottom: 24rpx;
}

.amount-button {
    padding: 20rpx 40rpx;
    background-color: #eee;
    border-radius: 12rpx;
    font-size: 28rpx;
}

.amount-button.selected {
    background-color: #ff6600;
    color: #fff;
}

.custom-input input {
    width: 100%;
    border: 1px solid #ccc;
    border-radius: 12rpx;
    padding: 16rpx;
    font-size: 28rpx;
    margin-bottom: 32rpx;
}

.confirm-button {
    background-color: #ff6600;
    color: white;
    font-size: 32rpx;
    padding: 20rpx;
    border-radius: 12rpx;
}
