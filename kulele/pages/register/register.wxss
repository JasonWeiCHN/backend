.container {
    padding: 40rpx;
    background-color: #f9f9f9;
    min-height: 100vh;
}

.form-section {
    background-color: #ffffff;
    width: 80vw;
    padding: 40rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

radio-group {
    display: flex;
    justify-content: space-around;
    margin-bottom: 30rpx;
}

radio {
    margin-right: 10rpx;
}

label {
    font-size: 30rpx;
    color: #333333;
}

.input-box {
    margin-top: 20rpx;
    margin-bottom: 30rpx;
    border: 1rpx solid #cccccc;
    border-radius: 12rpx;
    padding: 20rpx;
    font-size: 28rpx;
    background-color: #fff;
}

.custom-button {
    width: 100%;
    background-color: #1aad19;
    color: white;
    font-size: 30rpx;
    padding: 20rpx 0;
    border-radius: 12rpx;
    text-align: center;
}

.custom-button.primary {
    background-color: #007aff;
}

.register-instructions {
    background-color: #fff9e6;
    border-left: 6rpx solid #f90;
    padding: 20rpx;
    margin-bottom: 30rpx;
    font-size: 28rpx;
    color: #555;
}

.instruction-line {
    margin-bottom: 10rpx;
}
