.member-container {
    padding: 32rpx;
    background-color: #f9f9f9;
}

.balance-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32rpx;
    background-color: white;
    padding: 24rpx;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.balance-left {
    display: flex;
    flex-direction: column;
}

.balance-label {
    font-size: 28rpx;
    color: #888;
}

.balance-amount {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
}

.balance-right {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.action-button {
    background-color: #ff6600;
    color: white;
    font-size: 28rpx;
    padding: 12rpx 24rpx;
    border-radius: 12rpx;
}

.secondary {
    background-color: #999;
}

.article-list {
    margin-top: 20rpx;
}

.article-item {
    background-color: white;
    margin-bottom: 20rpx;
    padding: 24rpx;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
}

.article-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
}

.article-meta {
    display: flex;
    justify-content: space-between;
    color: #888;
    font-size: 24rpx;
}
