page {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: url('https://cdn.midjourney.com/64e7bac2-ac97-43b1-b907-715c70f1818f/0_0.png'); /* 替换为你的背景图URL */
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.container {
  width: 100%;
}

/* 标题容器 */
.title-wrapper {
  position: absolute;
  top: 4%; /* 调整到页面上方 */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 标题样式 */
.title-line {
  font-weight: bold;
  color: white;
  opacity: 0; /* 初始不可见 */
  transform: translateX(100%); /* 初始在屏幕右侧 */
  transition: transform 1s ease-in-out, opacity 1s ease-in-out;
}

/* 第一行标题 */
.title-line-1 {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

/* 第二行标题 */
.title-line-2 {
  font-size: 36rpx;
  margin-top: 10rpx;
}

/* 轮播图 */
.game-swiper {
  width: 100%;
  height: 320rpx;
  margin-top: 100rpx;
}

/* 轮播图项 */
swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

/* 轮播图图片 */
.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx; /* 可选，增加圆角 */
}

/* 按钮区域 */
.button-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.custom-button {
  width: 80%;
  padding: 20rpx 0;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  color: white;
  background-color: gray;
  border-radius: 10rpx;
  margin: 10rpx 0;
}

.primary {
  background-color: orange;
}
