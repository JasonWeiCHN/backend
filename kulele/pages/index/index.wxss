page {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: url('https://i0.hdslb.com/bfs/new_dyn/a74f60c1d8420c46db53dd4799baaa071526890437.png@1192w_1192h.avif'); /* 替换为你的背景图URL */
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.container {
  width: 100%;
}

.user-container {
  position: absolute;
  top: 16%;
  text-align: center;
  color: #ffffff;
}

.user-avatar {
  height: 120rpx;
}

/* 标题容器 */
.title-wrapper {
  position: absolute;
  top: 4%; /* 调整到页面上方 */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 标题样式 */
.title-line {
  font-weight: bold;
  color: white;
  opacity: 0; /* 初始不可见 */
  transform: translateX(100%); /* 初始在屏幕右侧 */
  transition: transform 1s ease-in-out, opacity 1s ease-in-out;
}

/* 第一行标题 */
.title-line-1 {
  font-size: 60rpx;
  margin-bottom: 8rpx;
}

/* 第二行标题 */
.title-line-2 {
  font-size: 36rpx;
  margin-top: 10rpx;
}

.title-line-3 {
  font-size: 36rpx;
  margin: 30rpx auto 100rpx;
}

/* 轮播图 */
.game-swiper-container {
  width: 100%;
  margin-top: 120rpx;
}

.game-swiper {
  width: 100%;
  height: 320rpx;
}

/* 轮播图项 */
swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

/* 轮播图图片 */
.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx; /* 可选，增加圆角 */
}

/* 按钮区域 */
.button-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.custom-button {
  width: 80%;
  padding: 20rpx 0;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  color: white;
  background-color: #333333;
  border-radius: 10rpx;
  margin: 10rpx 0;
}

.primary {
  background-color: orange;
}

.status-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.status-text {
  color: white;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.countdown-text {
  color: lightgray;
  font-size: 24rpx;
}

.start-button {
  background-color: #4CAF50;
}

